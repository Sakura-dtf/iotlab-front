<% if(photo.data.length > 0){ %>
    <div id="carouselExampleControls" class="carousel slide notify-width" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <% for( i = 1; i <  photo.data.length; i++){ %>
            <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>"></li>
            <% } %>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="<%= photo.data[0].image %>" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <p class="elli" style="font-size: 1.5rem"><%= photo.data[0].title %></p>
                </div>
            </div>
            <% for( i = 1; i <  photo.data.length; i++){ %>
                <div class="carousel-item">
                    <img src="<%= photo.data[i].image %>" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <p class="elli" style="font-size: 1.5rem"><%= photo.data[i].title %></p>
                    </div>
                </div>
            <% } %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
<% } else { %>
    <div id="carouselExampleControls" class="carousel slide notify-width" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/images/img-bg1.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <p class="elli" style="font-size: 1.5rem">Praesent commodo cursus magna, vel scelerisque nisl consectetur.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/images/img-bg2.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <p class="elli" style="font-size: 1.5rem">Praesent commodo cursus magna, vel scelerisque nisl consectetur.</p>
                </div>
