                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
<% } %>




<% if(data){ %>
    <div id="notify" class="my-container">
    <div class="notify">
        <div class="notify-container">
            <div class="notify-title">
                通知公告
            </div>
            <div class="notify-content">
                <ul class="ul">
                    <% data.data.results.forEach( item => { %>
                        <li>
                            <a href="/essay2/<%= item.id %>" class="elli">
                                <%= item.title%>
                            </a>
                            <span><%= item.createdAt %></span>
                        </li>
                    <% }) %>
                </ul>
                <nav aria-label="Page navigation example" style="margin-top: 20px;">
                    <ul class="pagination">
                        <% if( pageIndex !== 0) { %>
                            <li class="page-item">
                                <a class="page-link" href="/notify/<%= pageIndex - 1 %>" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                        <% } %>
                        <% for (var i = 0; i < pageTotal; i++) { %>

                            <% if(i === pageIndex){ %>
                                <li class="page-item active"><a class="page-link" href="/notify/<%= i %>"><%= i+1 %></a></li>
                            <% } else {%>
                                <li class="page-item"><a class="page-link" href="/notify/<%= i %>"><%= i+1 %></a></li>
                            <% } %>
                        <% } %>
                        <% if( pageIndex < pageTotal - 1){ %>
                            <li class="page-item">
                                <a class="page-link" href="/notify/<%= pageIndex + 1 %>" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        <% } %>

                    </ul>
                </nav>
            </div>
        </div>
        <div class="notify-commend" style="margin-top: 10px">
            <div class="card">
                <div class="card-body">
                    <div class="card-title" style="padding-bottom: 10px;">
                        <img src="/images/remen_1.svg" style="width: 30px" alt="">
                        <div class="icon-name">热点推送</div>
                    </div>
                    <div class="card-content">
                        <ul>
                            <% hots.data.results.forEach(item => { %>
                                <li>
                                    <a href="/essay2/<%= item.id %>">
                                        <div class="a-content elli" style="text-indent: 0.3rem"><%= item.title %></div>
                                        <div class="a-icon">
                                            <div>
                                                <img src="/images/yuedu.svg" style="width: 15px" alt="">
                                                <%= item.readNum %>
                                            </div>
                                            <div>
                                                <img src="/images/shijian.svg" style="width: 15px; margin-left: 15px" alt="">
                                                <%= item.createdAt %>
                                            </div>
                                        </div>
                                    </a>
                                </li>
                            <% }) %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<% } else { %>
    <div style="height: 400px;margin: 0 auto">
        <img src="/images/404.jpg" style="width: 500px;height: 400px;transform: translateX(-50%);margin-left: 50%;" alt="暂无文章数据">
    </div>
<% } %>





